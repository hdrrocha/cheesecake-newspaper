<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/imageViewThumb"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewThumb" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textColor="#000000"
            android:textStyle="bold"

            android:textSize="14dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAuthors" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewThumb"
            android:textSize="14dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textViewDate"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            android:textSize="14dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/textViewAuthors"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewAuthors"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
</android.support.constraint.ConstraintLayout>